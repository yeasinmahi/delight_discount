                                <li runat="server" id="signIn"><a href="Login.aspx" class="menuBtn">Sign In</a></li>

                                <li runat="server" id="user" class="hidden">
                                    <a class="dropdown-toggle menuBtn" data-toggle="dropdown" runat="server" href="#"><img src="img/logo.png" class="img img-circle" height="30px" width="30px"/>  <b runat="server" id="userName">Name</b></a>
                                    <ul class="dropdown-menu">
                                        <li><a runat="server" href="#">Profile</a></li>
